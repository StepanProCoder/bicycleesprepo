<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModelRadius"
            type="com.staple.probkaesp.RadiusSelectionViewModel" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/gray"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:lottie_autoPlay="true"
        android:layout_centerInParent="true"
        android:id="@+id/lottie_wheel"
        app:lottie_rawRes="@raw/wheel"
        android:elevation="5dp" />

    <Spinner
        android:id="@+id/radiusSpinner"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        tools:ignore="SpeakableTextPresentCheck"
        android:textColor="#FFF8E7"
        android:background="#FFF8E7"/>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="NEXT"
        android:textSize="30sp"
        android:fontFamily="@font/bold"
        android:textColor="#FFF8E7"
        android:layout_marginTop="25dp"
        android:background="@drawable/custom_button_frame"/>

</LinearLayout>
</layout>